# Environment Configuration for Auth Service

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/touriquest_auth

# JWT Configuration  
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth Provider Configurations
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=path/to/apple/private/key.p8

TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@touriquest.com
FROM_NAME=TouriQuest

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS and Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1
FRONTEND_URL=http://localhost:3000

# Application Configuration
DEBUG=true
ENVIRONMENT=development
PORT=8001
LOG_LEVEL=info

# Rate Limiting
LOGIN_RATE_LIMIT=5
REGISTRATION_RATE_LIMIT=3
PASSWORD_RESET_RATE_LIMIT=3