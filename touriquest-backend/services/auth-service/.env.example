# Auth Service Environment Variables

# Application settings
AUTH_APP_NAME=TouriQuest Auth Service
AUTH_APP_VERSION=1.0.0
AUTH_DEBUG=false

# Server settings
AUTH_HOST=0.0.0.0
AUTH_PORT=8000

# Database settings
AUTH_DATABASE_URL=postgresql+asyncpg://touriquest_user:touriquest_pass@postgres:5432/touriquest_auth
AUTH_REDIS_URL=redis://redis:6379/0

# JWT settings
AUTH_JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
AUTH_JWT_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password settings
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_PASSWORD_REQUIRE_UPPERCASE=true
AUTH_PASSWORD_REQUIRE_LOWERCASE=true
AUTH_PASSWORD_REQUIRE_NUMBERS=true
AUTH_PASSWORD_REQUIRE_SPECIAL=true

# Rate limiting
AUTH_LOGIN_RATE_LIMIT=10
AUTH_REGISTER_RATE_LIMIT=5
AUTH_PASSWORD_RESET_RATE_LIMIT=3

# Email settings
AUTH_SMTP_HOST=smtp.gmail.com
AUTH_SMTP_PORT=587
AUTH_SMTP_USERNAME=your-email@gmail.com
AUTH_SMTP_PASSWORD=your-app-password
AUTH_SMTP_USE_TLS=true

# OAuth settings
AUTH_GOOGLE_CLIENT_ID=your-google-client-id
AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
AUTH_FACEBOOK_APP_ID=your-facebook-app-id
AUTH_FACEBOOK_APP_SECRET=your-facebook-app-secret

# Security settings
AUTH_BCRYPT_ROUNDS=12
AUTH_SESSION_TIMEOUT_HOURS=24
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Email verification
AUTH_EMAIL_VERIFICATION_REQUIRED=true
AUTH_EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# CORS settings
AUTH_CORS_ORIGINS=["http://localhost:3000","https://touriquest.com","https://app.touriquest.com"]