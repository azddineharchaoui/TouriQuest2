# Environment variables for AI service
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/touriquest_ai_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=touriquest_ai_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Google AI
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro

# JWT
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Voice Processing
WHISPER_MODEL=base
GTTS_LANG=en
VOICE_UPLOAD_MAX_SIZE=10485760  # 10MB

# Conversation
MAX_CONVERSATION_HISTORY=100
CONVERSATION_CACHE_TTL=3600

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_TTL=86400

# Function Calling
ENABLE_FUNCTION_CALLING=true
MAX_FUNCTION_RETRIES=3

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Uploads
UPLOAD_DIR=/app/uploads
TEMP_DIR=/app/temp
MAX_FILE_SIZE=50485760  # 50MB

# Workers (for production)
MAX_WORKERS=4
WORKER_TIMEOUT=30

# External Services (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/dbname
# REDIS_URL=redis://:password@redis-host:6379/0