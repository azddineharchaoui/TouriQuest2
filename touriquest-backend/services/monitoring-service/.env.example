# Environment variables for monitoring service
# Copy this file to .env and update with your actual values

# Service Configuration
SERVICE_NAME=monitoring-service
APP_VERSION=1.0.0
DEBUG=true
SENTRY_ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
MONITORING_API_TOKEN=your-secret-monitoring-token
MONITORING_API_REQUIRE_AUTH=false
MONITORING_API_RATE_LIMIT_ENABLED=true
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/touriquest
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENDPOINT=/metrics
PUSHGATEWAY_URL=http://localhost:9091

# Jaeger Configuration
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=14268
JAEGER_SERVICE_NAME=touriquest-monitoring
TRACING_SAMPLE_RATE=0.1

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_VERIFY_CERTS=false
ELASTICSEARCH_LOG_INDEX=touriquest-logs

# Logstash Configuration
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# PagerDuty Configuration
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-service-id
PAGERDUTY_ESCALATION_POLICY_ID=your-escalation-policy-id

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=#monitoring
SLACK_CRITICAL_CHANNEL=#critical-alerts
SLACK_HIGH_CHANNEL=#high-alerts
SLACK_MEDIUM_CHANNEL=#medium-alerts
SLACK_LOW_CHANNEL=#low-alerts

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging Configuration
LOG_FILE=/app/logs/monitoring.log
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=104857600  # 100MB
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# External Services
USER_SERVICE_URL=http://localhost:8001
BOOKING_SERVICE_URL=http://localhost:8002
PROPERTY_SERVICE_URL=http://localhost:8003

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30.0
HEALTH_CHECK_CACHE_TTL=60
DATABASE_HEALTH_TIMEOUT=10.0
REDIS_HEALTH_TIMEOUT=5.0
EXTERNAL_SERVICE_TIMEOUT=15.0

# Performance Thresholds
CPU_THRESHOLD=80.0
MEMORY_THRESHOLD=85.0
DISK_THRESHOLD=90.0
RESPONSE_TIME_THRESHOLD=2000.0  # milliseconds