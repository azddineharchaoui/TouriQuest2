# API Gateway Environment Variables

# Application settings
GATEWAY_APP_NAME=TouriQuest API Gateway
GATEWAY_APP_VERSION=1.0.0
GATEWAY_DEBUG=false

# Server settings
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_WORKERS=4

# CORS settings
GATEWAY_CORS_ORIGINS=["http://localhost:3000","https://touriquest.com","https://app.touriquest.com"]

# Rate limiting
GATEWAY_RATE_LIMIT_REQUESTS=1000
GATEWAY_RATE_LIMIT_WINDOW=60

# Service discovery
GATEWAY_SERVICE_DISCOVERY_ENABLED=true
GATEWAY_CONSUL_HOST=consul
GATEWAY_CONSUL_PORT=8500

# Load balancing
GATEWAY_LOAD_BALANCING_STRATEGY=round_robin

# Circuit breaker
GATEWAY_CIRCUIT_BREAKER_ENABLED=true
GATEWAY_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
GATEWAY_CIRCUIT_BREAKER_TIMEOUT=60

# Timeouts
GATEWAY_DEFAULT_TIMEOUT=30.0
GATEWAY_AI_SERVICE_TIMEOUT=60.0
GATEWAY_MEDIA_SERVICE_TIMEOUT=45.0

# Authentication
GATEWAY_JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
GATEWAY_JWT_ALGORITHM=HS256

# Monitoring
GATEWAY_METRICS_ENABLED=true
GATEWAY_JAEGER_HOST=jaeger
GATEWAY_JAEGER_PORT=14268

# Security
GATEWAY_TRUSTED_HOSTS=["localhost","*.touriquest.com"]

# Service URLs (for Docker Compose)
AUTH_SERVICE_URL=http://auth-service:8000
USER_SERVICE_URL=http://user-service:8000
PROPERTY_SERVICE_URL=http://property-service:8000
BOOKING_SERVICE_URL=http://booking-service:8000
POI_SERVICE_URL=http://poi-service:8000
EXPERIENCE_SERVICE_URL=http://experience-service:8000
AI_SERVICE_URL=http://ai-service:8000
MEDIA_SERVICE_URL=http://media-service:8000
NOTIFICATION_SERVICE_URL=http://notification-service:8000
ANALYTICS_SERVICE_URL=http://analytics-service:8000
ADMIN_SERVICE_URL=http://admin-service:8000